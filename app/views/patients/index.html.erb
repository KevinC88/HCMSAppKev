<div class="col-lg-6">
<p id="notice"><%= notice %></p>


<%= form_tag(patients_path, :method => "get") do %>
<%= text_field_tag :search, nil, :placeholder => "Search names" %>
<%= submit_tag "Search", class: "btn btn-info"  %>
<% end %>
</br>


<table class="table table-hover table-striped table-bordered table repsonsive">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>D.O.B</th>
      <th>Complaint</th>
      <th>Address</th>
      <th colspan="3">Options </th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.firstname %></td>
        <td><%= patient.lastname %></td>
        <td><%= patient.dob %></td>
        <td><%= patient.complaint %></td>
        <td><%= patient.address %></td>
        <td><%= link_to 'Show', patient, class: "btn btn-success" %></td>
<% if current_user.admin? %>
        <td><%= link_to 'Edit', edit_patient_path(patient), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
  <% end %>   
 </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Patient', new_patient_path, class: "btn btn-info btn-block" %>
</br>
</div>
