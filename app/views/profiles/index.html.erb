<div class="col-lg-6">
<p id="notice"><%= notice %></p>

<div class="panel panel-info">
  <div class="panel-heading">Profiles</div>
<table class="table table-hover table-striped table-bordered table-responsive">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Address</th>
      <th>User</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.firstname %></td>
        <td><%= profile.lastname %></td>
        <td><%= profile.address %></td>
        <td><%= profile.user_id  %></td>
        <td><%= link_to 'Show', profile, class: "btn btn-success" %></td>
<% if current_user.admin? %>
        <td><%= link_to 'Edit', edit_profile_path(profile), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
<% end %>      
</tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
</div>

